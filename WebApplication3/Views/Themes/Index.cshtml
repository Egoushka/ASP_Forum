
@{
    ViewBag.Title = "List of themes";
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<a asp-action="Create">Add new theme</a>
<table class="table">
    <tr><th>Name</th><th>Description</th><th></th></tr>
    @{
        var posts = ViewBag.Posts;
        var user = ViewBag.User;
    }
    @foreach (var th in ViewBag.Themes)
    {
        if (th.IdAuthor != user.Id)
        {
            continue;
        }
        <tr>
            <td>@th.Title</td>
            <td>@th.Description</td>
            <td>
                <form asp-action="Delete" asp-route-id="@th.Id" method="post">
                    <a class="btn btn-sm btn-primary"  asp-action="Edit" asp-route-id="@th.Id">Change</a>
                    <a class="btn btn-sm btn-primary" asp-controller="Posts" asp-action="Index" asp-route-id="@th.Id">Edit posts</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>